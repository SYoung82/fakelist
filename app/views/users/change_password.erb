<h1>Change Password</h1>

<!-- Create form with current password, and new password fields -->
<form action="/users/change_password" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p><label>Current Password: </label><br>
  <input type="password" name="current" id = "current_password"></p>
  <p><label>New Password: </label><br>
  <input type="password" name="new" id = "new_password"></p>
  <p><label>New Password Again: </label><br>
  <input type="password" name="verify" id = "verify_password"></p>
  <br></br>
  <input type="submit" value="submit">
</form>
