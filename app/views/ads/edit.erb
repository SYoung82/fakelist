<h1>Edit Ad</h1>
<form action="/ads/<%= @ad.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p><label>Title:</label>
  <input type="text" name="title" id = "title" value="<%= @ad.title %>"></p>
  <p><label>Contents:</label>
  <input type="text" name="content" id = "content" value="<%= @ad.content %>"></p>

  <label>Section:</label><br>
  <% Section.all.each do |section| %>
    <% if section == @ad.section %>
      <input type="radio" name = "section" value="<%= section.id %>" checked="checked"> <%= section.name %><br>
    <% else %>
      <input type="radio" name = "section" value="<%= section.id %>"> <%= section.name %><br>
    <% end %>
  <% end %>

  <br></br>
  <input type="submit" value="submit">
</form>
